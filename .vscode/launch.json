    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                // "--gltf_file", "${request:input:gltf_file}",
                // Request command line arguments from the user.
                "${command:python.requestInput}",
            ]
        }
    ]
}